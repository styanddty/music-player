<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="64dp" android:background="#000000">

	<ImageView
	    android:id="@+id/notiicon"
	    android:layout_width="64dp"
	    android:layout_height="match_parent"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentTop="true"
	    android:src="@drawable/music" />

	<TextView android:id="@+id/notiname" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_alignParentTop="true"
		android:layout_toRightOf="@+id/notiicon" android:text="Medium Text"
		android:textAppearance="?android:attr/textAppearanceLarge" 
		android:textColor="#ffffff" />

	<LinearLayout android:layout_width="match_parent"
		android:layout_height="match_parent" android:layout_alignBottom="@+id/notiicon"
		android:layout_below="@+id/notiname" android:layout_toRightOf="@+id/notiicon"
		android:orientation="horizontal">

		<ImageView
		    android:id="@+id/notipre"
		    android:layout_width="0dp"
		    android:layout_height="match_parent"
		    android:layout_weight="1"
		    android:src="@drawable/music_pre_image" />

		<ImageView
		    android:id="@+id/notiplay"
		    android:layout_width="0dp"
		    android:layout_height="match_parent"
		    android:layout_weight="1"
		    android:src="@drawable/img_lockscreen_play_normal" />

		<ImageView
		    android:id="@+id/notinext"
		    android:layout_width="0dp"
		    android:layout_height="match_parent"
		    android:layout_weight="1"
		    android:src="@drawable/music_next_image" />

	</LinearLayout>
</RelativeLayout>